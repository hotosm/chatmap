# ==========================================
# ChatMap Environment Configuration
# ==========================================
# Copy this file to .env and fill in the values

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_DB=chatmap
POSTGRES_USER=admin
POSTGRES_PASSWORD=changeme-in-production

# ==========================================
# ChatMap API Configuration
# ==========================================
CHATMAP_API_DEBUG=false
CHATMAP_API_URL=http://localhost:8000
CHATMAP_ENC_KEY=0123456789ABCDEF0123456789ABCDEF
CHATMAP_SECRET_KEY=changeme-min-32-chars-long
CHATMAP_DB_HOST=chatmap-db
CHATMAP_ACCESS_TOKEN_EXPIRE_MINUTES=120
CHATMAP_EXPIRING_MIN=30

# ==========================================
# Authentication Configuration
# ==========================================
# SSO Mode (production): Use login.hotosm.org
# HANKO_API_URL=https://login.hotosm.org
# JWT_ISSUER=https://login.hotosm.org

# Standalone/Dev Mode: Use local Hanko instance
HANKO_API_URL=http://localhost:8002
JWT_ISSUER=http://localhost:8002
COOKIE_SECRET=dev-secret-key-min-32-bytes-long!

# ==========================================
# SMTP Configuration (for email verification)
# ==========================================
# Dev mode (compose.dev.yml) uses MailHog automatically
# Standalone mode requires real SMTP for production

SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=noreply@chatmap.hotosm.org

# ==========================================
# Google OAuth Configuration (Optional)
# ==========================================
# To enable Google Sign-In:
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID (Web application)
# 3. Add authorized redirect URI: http://localhost:8002/thirdparty/callback
# 4. Copy Client ID and Secret below
# 5. Set GOOGLE_ENABLED=true

GOOGLE_ENABLED=false
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
